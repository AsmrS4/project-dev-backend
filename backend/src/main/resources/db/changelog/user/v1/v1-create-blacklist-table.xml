<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="v1-001" author="Aymir">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="blacklist"/>
            </not>
        </preConditions>
        <createTable tableName="blacklist">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_token_id"/>
            </column>
            <column name="login" type="varchar(256)">
                <constraints foreignKeyName="fk_user_email" referencedTableName="users" referencedColumnNames="email"/>
            </column>
            <column name="token" type="varchar(256)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
